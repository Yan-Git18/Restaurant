@model List<Restaurant.Models.Rest_Reserva>
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewData["Title"] = "Mis Reservas";
}

<div class="container mx-auto my-10 bg-white p-6 rounded-xl shadow-md">
    <h2 class="text-2xl font-bold text-restaurant-primary mb-6 text-center">
        <i class="fas fa-calendar-check mr-2 text-restaurant-accent"></i>
        Mis Reservas
    </h2>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-10">
            <i class="fas fa-calendar-times fa-3x text-gray-400 mb-3"></i>
            <p class="text-gray-500 mb-4">Aún no tienes reservas registradas.</p>
            <a asp-controller="Reservas" asp-action="Crear"
               class="bg-restaurant-accent hover:bg-restaurant-secondary text-white px-6 py-3 rounded-full shadow-md transition-all duration-200 transform hover:scale-105">
                <i class="fas fa-plus mr-2"></i> Hacer una nueva reserva
            </a>
        </div>
    }
    else
    {
        <div class="overflow-x-auto">
            <table class="min-w-full border border-gray-200 rounded-lg shadow-sm">
                <thead class="bg-gray-100">
                    <tr class="text-left text-gray-700">
                        <th class="py-3 px-4">Fecha</th>
                        <th class="py-3 px-4">Hora</th>
                        <th class="py-3 px-4">Personas</th>
                        <th class="py-3 px-4">Ocasión</th>
                        <th class="py-3 px-4">Estado</th>
                        <th class="py-3 px-4">Acciones</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var r in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="py-3 px-4">@r.FechaHora.ToString("dd/MM/yyyy")</td>
                            <td class="py-3 px-4">@r.FechaHora.ToString("HH:mm")</td>
                            <td class="py-3 px-4">@r.NumeroPersonas</td>
                            <td class="py-3 px-4">
                                @{
                                    var ocasion = r.Observaciones?.Split('|').FirstOrDefault(o => o.Contains("Ocasión:"))?.Replace("Ocasión:", "").Trim();
                                    @ocasion
                                }
                        </td>
                        <td class="py-3 px-4">
                            <span class="px-3 py-1 rounded-full text-sm font-medium
                                        @(r.Estado == "Pendiente" ? "bg-yellow-100 text-yellow-800" :
                                                                        r.Estado == "Cancelada" ? "bg-red-100 text-red-800" :
                                                                        "bg-green-100 text-green-800")">
                            @r.Estado
                        </span>
                    </td>
                    <td class="py-3 px-4 flex gap-2">
                        <a asp-controller="Reservas" asp-action="Detalles" asp-route-id="@r.ReservaId"
                           class="text-blue-600 hover:underline">
                            <i class="fas fa-eye"></i> Ver
                        </a>
                        @if (r.Estado == "Pendiente")
                                {
                                    <form asp-action="Cancelar" asp-route-id="@r.ReservaId" method="post"
                                          onsubmit="return confirm('¿Deseas cancelar esta reserva?');">
                                        <button type="submit" class="text-red-600 hover:underline">
                                            <i class="fas fa-times"></i> Cancelar
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
