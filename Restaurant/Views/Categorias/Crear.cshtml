@model Restaurant.Models.Rest_Categoria
@{
    ViewData["Title"] = "Crear Categoría";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Dashboard.css" />
</head>
<body>
    <div class="container-fluid py-4">
        <div class="dashboard-header mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1>Registrar nueva categoría</h1>
                    @* <p class="mb-0">Ingrese el nombre del nuevo rol</p> *@
                </div>
                <div>
                    <span class="badge bg-light text-dark">
                        <i class="bi bi-calendar me-2"></i>
                        <span id="current-date"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-lg-4">
                <div class="card card-facturas">
                    <div class="card-body">
                        <form asp-controller="Categorias" asp-action="Crear" method="post">
                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre</label>
                                <input asp-for="Nombre" class="form-control" required />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Descripcion" class="form-label">Descripción</label>
                                <input asp-for="Descripcion" class="form-control" required />
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Orden" class="form-label">Orden</label>
                                <input asp-for="Orden" class="form-control" required />
                                <span asp-validation-for="Orden" class="text-danger small"></span>
                            </div>
                            <div class="text-end">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save me-1"></i> Guardar
                                </button>
                                <a asp-controller="Categorias" asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Volver
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script>
        document.getElementById('current-date').textContent = new Date().toLocaleDateString('es-ES', {
            weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}