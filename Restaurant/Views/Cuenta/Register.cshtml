@model Restaurant.ViewModels.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Cuenta - Delizioso</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'restaurant-primary': '#8B4513',
                        'restaurant-secondary': '#D2691E',
                        'restaurant-accent': '#FF6B35',
                        'restaurant-dark': '#2C1810',
                    },
                    fontFamily: {
                        'serif': ['Georgia', 'serif'],
                        'elegant': ['Playfair Display', 'serif']
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!--Ocultar el toggle por defecto de los campos passwords-->
    <style>
        input[type="password"]::-ms-reveal,
        input[type="password"]::-ms-clear,
        input[type="password"]::-webkit-credentials-auto-fill-button {
            display: none !important;
            width: 0 !important;
            height: 0 !important;
        }
    
        /* Scroll para el contenedor del formulario en móvil y pantallas medianas */
        @@media (max-height: 900px) {
            .form-container

        {
            max-height: calc(100vh - 8rem);
            overflow-y: auto;
            overflow-x: hidden;
        }

        }

        @@media (max-height: 700px) {
            .form-container

        {
            max-height: calc(100vh - 4rem);
        }

        }

        /* Estilo personalizado para la scrollbar */
        .form-container::-webkit-scrollbar {
            width: 6px;
        }

        .form-container::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
        }

        .form-container::-webkit-scrollbar-thumb {
            background: rgba(255, 107, 53, 0.5);
            border-radius: 10px;
        }

            .form-container::-webkit-scrollbar-thumb:hover {
                background: rgba(255, 107, 53, 0.8);
            }
    </style>
</head>
<body class="font-sans min-h-screen bg-gradient-to-br from-restaurant-dark via-restaurant-primary to-restaurant-secondary relative overflow-hidden">

    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0">
        <div class="absolute top-20 left-10 w-40 h-40 bg-restaurant-accent/20 rounded-full animate-pulse"></div>
        <div class="absolute bottom-20 right-20 w-60 h-60 bg-restaurant-secondary/20 rounded-full animate-bounce" style="animation-duration: 3s;"></div>
        <div class="absolute top-1/3 right-10 w-32 h-32 bg-white/10 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
        <div class="absolute bottom-1/3 left-20 w-24 h-24 bg-restaurant-accent/15 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    <!-- Pattern overlay -->
    <div class="absolute inset-0 opacity-5">
        <div style="background-image: url('data:image/svg+xml,<svg width=" 60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="white" fill-opacity="0.1"><circle cx="30" cy="30" r="4" /></g></svg>'); background-size: 60px 60px;"></div>
    </div>

    <div class="relative z-10 flex items-center justify-center min-h-screen p-4 py-12">
        <div class="w-full max-w-2xl form-container">

            <!-- Header con Logo -->
            <div class="text-center mb-8">

                <div class="text-4xl font-elegant font-bold text-white mb-4">
                    <i class="fas fa-utensils mr-3 text-restaurant-accent"></i>
                    Delizioso
                </div>
                <h1 class="text-2xl font-elegant font-semibold text-white mb-2">Únete a Nosotros</h1>
                <p class="text-white/80">Crea tu cuenta y disfruta de beneficios exclusivos</p>
            </div>

            <!-- Formulario de Registro -->
            <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-8 border border-white/20 shadow-2xl">
                <form class="space-y-6" id="register-form" method="post" asp-controller="Cuenta" asp-action="Register">

                    <!-- Fila 1: Nombre y Email -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Campo Nombre -->
                        <div class="space-y-2">
                            <label for="nombre" class="block text-sm font-medium text-white/90">
                                <i class="fas fa-user mr-2 text-restaurant-accent"></i>
                                Nombres
                            </label>
                            <div class="relative">
                                <input type="text"
                                       id="nombre"
                                       name="Nombre"
                                       required
                                       class="w-full px-4 py-4 bg-white/20 border border-white/30 rounded-xl text-white placeholder-white/60 focus:ring-2 focus:ring-restaurant-accent focus:border-transparent transition-all duration-200 backdrop-blur-sm"
                                       placeholder="Tus nombres">
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <i class="fas fa-id-card text-white/40"></i>
                                </div>
                            </div>
                            <span class="text-red-300 text-sm" asp-validation-for="Nombre"></span>
                        </div>

                        <!-- Campo Apellidos -->
                        <div class="space-y-2">
                            <label for="apellidos" class="block text-sm font-medium text-white/90">
                                <i class="fas fa-user mr-2 text-restaurant-accent"></i>
                                Apellidos
                            </label>
                            <div class="relative">
                                <input type="text"
                                       id="apellidos"
                                       name="Apellidos"
                                       required
                                       class="w-full px-4 py-4 bg-white/20 border border-white/30 rounded-xl text-white placeholder-white/60 focus:ring-2 focus:ring-restaurant-accent focus:border-transparent transition-all duration-200 backdrop-blur-sm"
                                       placeholder="Tus apellidos">
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <i class="fas fa-id-card text-white/40"></i>
                                </div>
                            </div>
                            <span class="text-red-300 text-sm" asp-validation-for="Apellidos"></span>
                        </div>
                    </div>

                    <!-- Fila 2: Email y Teléfono -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Campo Email -->
                        <div class="space-y-2">
                            <label for="email" class="block text-sm font-medium text-white/90">
                                <i class="fas fa-envelope mr-2 text-restaurant-accent"></i>
                                Correo Electrónico
                            </label>
                            <div class="relative">
                                <input type="email"
                                       id="email"
                                       name="Email"
                                       required
                                       class="w-full px-4 py-4 bg-white/20 border border-white/30 rounded-xl text-white placeholder-white/60 focus:ring-2 focus:ring-restaurant-accent focus:border-transparent transition-all duration-200 backdrop-blur-sm"
                                       placeholder="tucorreo@email.com">
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <i class="fas fa-at text-white/40"></i>
                                </div>
                            </div>
                            <span class="text-red-300 text-sm" asp-validation-for="Email"></span>
                        </div>

                        <!-- Campo Teléfono -->
                        <div class="space-y-2">
                            <label for="telefono" class="block text-sm font-medium text-white/90">
                                <i class="fas fa-phone mr-2 text-restaurant-accent"></i>
                                Teléfono
                            </label>
                            <div class="relative">
                                <input type="tel"
                                       id="telefono"
                                       name="Telefono"
                                       required
                                       class="w-full px-4 py-4 bg-white/20 border border-white/30 rounded-xl text-white placeholder-white/60 focus:ring-2 focus:ring-restaurant-accent focus:border-transparent transition-all duration-200 backdrop-blur-sm"
                                       placeholder="999 888 777">
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <i class="fas fa-mobile-alt text-white/40"></i>
                                </div>
                            </div>
                            <span class="text-red-300 text-sm" asp-validation-for="Telefono"></span>
                        </div>
                    </div>

                    <!-- Fila 2: Contraseña y Confirmar Contraseña -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Campo Contraseña -->
                        <div class="space-y-2">
                            <label for="password" class="block text-sm font-medium text-white/90">
                                <i class="fas fa-lock mr-2 text-restaurant-accent"></i>
                                Contraseña
                            </label>
                            <div class="relative">
                                <input type="password"
                                       id="password"
                                       name="Password"
                                       required
                                       class="w-full px-4 py-4 bg-white/20 border border-white/30 rounded-xl text-white placeholder-white/60 focus:ring-2 focus:ring-restaurant-accent focus:border-transparent transition-all duration-200 backdrop-blur-sm"
                                       placeholder="Mínimo 6 caracteres">
                                <button type="button"
                                        class="absolute inset-y-0 right-0 pr-3 flex items-center text-white/40 hover:text-white/70 transition-colors duration-200"
                                        id="toggle-password">
                                    <i class="fas fa-eye" id="password-icon"></i>
                                </button>
                            </div>
                            <span class="text-red-300 text-sm" asp-validation-for="Password"></span>
                            <!-- Indicador de fortaleza -->
                            <div class="flex items-center space-x-2 text-xs text-white/70" id="password-strength">
                                <div class="flex space-x-1">
                                    <div class="h-1 w-8 bg-white/20 rounded" id="strength-bar-1"></div>
                                    <div class="h-1 w-8 bg-white/20 rounded" id="strength-bar-2"></div>
                                    <div class="h-1 w-8 bg-white/20 rounded" id="strength-bar-3"></div>
                                </div>
                                <span id="strength-text">Seguridad</span>
                            </div>
                        </div>

                        <!-- Campo Confirmar Contraseña -->
                        <div class="space-y-2">
                            <label for="confirm-password" class="block text-sm font-medium text-white/90">
                                <i class="fas fa-lock mr-2 text-restaurant-accent"></i>
                                Confirmar Contraseña
                            </label>
                            <div class="relative">
                                <input type="password"
                                       id="confirm-password"
                                       name="ConfirmPassword"
                                       required
                                       class="w-full px-4 py-4 bg-white/20 border border-white/30 rounded-xl text-white placeholder-white/60 focus:ring-2 focus:ring-restaurant-accent focus:border-transparent transition-all duration-200 backdrop-blur-sm"
                                       placeholder="Repite tu contraseña">
                                <button type="button"
                                        class="absolute inset-y-0 right-0 pr-3 flex items-center text-white/40 hover:text-white/70 transition-colors duration-200"
                                        id="toggle-confirm-password">
                                    <i class="fas fa-eye" id="confirm-password-icon"></i>
                                </button>
                            </div>
                            <span class="text-red-300 text-sm" asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>

                    <!-- Términos y Condiciones -->
                    <div class="flex items-start">
                        <input id="terms"
                               name="terms"
                               type="checkbox"
                               required
                               class="h-4 w-4 text-restaurant-accent bg-white/20 border-white/30 rounded focus:ring-restaurant-accent focus:ring-2 mt-1">
                        <label for="terms" class="ml-3 block text-sm text-white/80">
                            Acepto los <a href="#" class="text-restaurant-accent hover:text-restaurant-secondary transition-colors duration-200 font-medium">términos y condiciones</a>
                            y la <a href="#" class="text-restaurant-accent hover:text-restaurant-secondary transition-colors duration-200 font-medium">política de privacidad</a>
                        </label>
                    </div>

                    <!-- Botón de Registro -->
                    <button type="submit"
                            class="w-full bg-restaurant-accent hover:bg-restaurant-secondary text-white py-4 px-6 rounded-xl font-semibold text-lg transition-all duration-300 transform hover:scale-105 hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
                            id="register-button">
                        <i class="fas fa-user-plus mr-2"></i>
                        <span id="button-text">Crear Cuenta</span>
                    </button>

                    <!-- Mensaje de error general -->
                    <div class="bg-red-500/20 border border-red-500/30 rounded-xl p-4 hidden" id="general-error">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-triangle text-red-300 mr-3"></i>
                            <div>
                                <h3 class="text-red-100 font-medium">Error en el registro</h3>
                                <p class="text-red-200 text-sm" id="error-message">Por favor verifica los datos ingresados.</p>
                            </div>
                        </div>
                    </div>

                </form>
            </div>

            <!-- Enlaces adicionales -->
            <div class="mt-8 text-center">
                <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-6 border border-white/10">
                    <p class="text-white/80 mb-4">¿Ya tienes una cuenta?</p>
                    <a href="/Cuenta/Login" class="inline-block bg-white/10 hover:bg-white/20 text-white px-6 py-3 rounded-xl font-medium transition-all duration-300 transform hover:scale-105 border border-white/30">
                        <i class="fas fa-sign-in-alt mr-2"></i>
                        Iniciar Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/register.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>