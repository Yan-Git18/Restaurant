
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurante Delizioso - Sabores Únicos</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'restaurant-primary': '#8B4513',
                        'restaurant-secondary': '#D2691E',
                        'restaurant-accent': '#FF6B35',
                        'restaurant-dark': '#2C1810',
                    },
                    fontFamily: {
                        'serif': ['Georgia', 'serif'],
                        'elegant': ['Playfair Display', 'serif']
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</head>
<body class="font-sans">
    <!-- Navigation Bar -->
    <nav class="bg-white/95 backdrop-blur-md shadow-lg fixed w-full top-0 z-50 transition-all duration-300" id="navbar">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16 lg:h-20">
                <!-- Logo -->
                <div class="flex-shrink-0 flex items-center">
                    <div class="text-2xl lg:text-3xl font-elegant font-bold text-restaurant-primary">
                        <i class="fas fa-utensils mr-2 text-restaurant-accent"></i>
                        Delizioso
                    </div>
                </div>

                <!-- Desktop Navigation -->
                <div class="hidden lg:block">
                    <div class="flex items-center space-x-8">
                        <a href="#inicio" class="text-restaurant-dark hover:text-restaurant-accent transition-colors duration-200 font-medium">
                            Inicio
                        </a>
                        <a href="#nosotros" class="text-restaurant-dark hover:text-restaurant-accent transition-colors duration-200 font-medium">
                            Nosotros
                        </a>
                        <a href="#menu" class="text-restaurant-dark hover:text-restaurant-accent transition-colors duration-200 font-medium">
                            Menú
                        </a>
                        <!-- Botón Reservar -->
                        <a href="#reservas" class="bg-restaurant-accent hover:bg-restaurant-secondary text-white px-6 py-3 rounded-full font-medium transition-all duration-200 transform hover:scale-105 shadow-lg">
                            <i class="fas fa-phone mr-2"></i>
                            Reservar Ya
                        </a>

                        <!-- Login Dropdown Container -->
                        <div class="relative" id="loginDropdown">
                            <!-- Botón cuando NO está logueado -->
                            <button id="loginBtn" onclick="toggleLoginMenu()" class="bg-restaurant-dark hover:bg-restaurant-accent text-white w-12 h-12 rounded-full font-medium transition-all duration-200 transform hover:scale-105 shadow-lg flex items-center justify-center">
                                <i class="fas fa-user text-lg"></i>
                            </button>

                            <!-- Botón cuando SÍ está logueado -->
                            <button id="loggedInBtn" onclick="toggleUserMenu()" class="bg-restaurant-accent hover:bg-restaurant-secondary text-white w-12 h-12 rounded-full font-medium transition-all duration-200 transform hover:scale-105 shadow-lg items-center justify-center hidden">
                                <i class="fas fa-user-check text-lg"></i>
                            </button>

                            <!-- Menú Dropdown para Login (cuando NO está logueado) -->
                            <div id="loginMenu" class="absolute right-0 mt-2 w-80 bg-white rounded-xl shadow-2xl border border-gray-200 z-50 opacity-0 invisible transform translate-y-2 transition-all duration-300">
                                <div class="p-6">
                                    <div class="text-center mb-6">
                                        <h3 class="text-xl font-elegant font-bold text-restaurant-primary mb-2">Iniciar Sesión</h3>
                                        <p class="text-gray-600 text-sm">Selecciona tu tipo de acceso</p>
                                    </div>

                                    <div class="space-y-3">
                                        <!-- Opción Cliente -->
                                        <button onclick="showLoginForm('cliente')" class="w-full bg-gradient-to-r from-restaurant-accent to-yellow-500 hover:from-yellow-500 hover:to-restaurant-accent text-white p-4 rounded-lg transition-all duration-200 transform hover:scale-102 shadow-md">
                                            <div class="flex items-center">
                                                <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center mr-4">
                                                    <i class="fas fa-user text-xl"></i>
                                                </div>
                                                <div class="text-left">
                                                    <div class="font-semibold">Cliente</div>
                                                    <div class="text-sm opacity-90">Gestiona tus reservas</div>
                                                </div>
                                                <i class="fas fa-chevron-right ml-auto"></i>
                                            </div>
                                        </button>

                                        <!-- Opción Empleado -->
                                        <button onclick="showLoginForm('empleado')" class="w-full bg-gradient-to-r from-restaurant-secondary to-amber-700 hover:from-amber-700 hover:to-restaurant-secondary text-white p-4 rounded-lg transition-all duration-200 transform hover:scale-102 shadow-md">
                                            <div class="flex items-center">
                                                <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center mr-4">
                                                    <i class="fas fa-id-badge text-xl"></i>
                                                </div>
                                                <div class="text-left">
                                                    <div class="font-semibold">Empleado</div>
                                                    <div class="text-sm opacity-90">Panel de trabajo</div>
                                                </div>
                                                <i class="fas fa-chevron-right ml-auto"></i>
                                            </div>
                                        </button>

                                        <!-- Opción Administrador -->
                                        <button onclick="showLoginForm('admin')" class="w-full bg-gradient-to-r from-restaurant-dark to-gray-800 hover:from-gray-800 hover:to-restaurant-dark text-white p-4 rounded-lg transition-all duration-200 transform hover:scale-102 shadow-md">
                                            <div class="flex items-center">
                                                <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center mr-4">
                                                    <i class="fas fa-crown text-xl"></i>
                                                </div>
                                                <div class="text-left">
                                                    <div class="font-semibold">Administrador</div>
                                                    <div class="text-sm opacity-90">Gestión completa</div>
                                                </div>
                                                <i class="fas fa-chevron-right ml-auto"></i>
                                            </div>
                                        </button>
                                    </div>

                                    <div class="mt-6 pt-4 border-t border-gray-200 text-center">
                                        <p class="text-sm text-gray-600">¿Primera vez aquí?</p>
                                        <button onclick="showRegisterForm()" class="text-restaurant-accent hover:text-restaurant-secondary font-medium text-sm mt-1 transition-colors duration-200">
                                            Crear cuenta de cliente
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Menú Dropdown para Usuario Logueado -->
                            <div id="userMenu" class="absolute right-0 mt-2 w-64 bg-white rounded-xl shadow-2xl border border-gray-200 z-50 opacity-0 invisible transform translate-y-2 transition-all duration-300">
                                <div class="p-4">
                                    <!-- Info del usuario -->
                                    <div class="flex items-center space-x-3 pb-4 border-b border-gray-200">
                                        <div class="w-12 h-12 bg-restaurant-accent rounded-full flex items-center justify-center">
                                            <i id="userIcon" class="fas fa-user text-white"></i>
                                        </div>
                                        <div>
                                            <div id="userName" class="font-semibold text-restaurant-primary">Juan Pérez</div>
                                            <div id="userType" class="text-sm text-gray-600">Cliente</div>
                                        </div>
                                    </div>

                                    <!-- Opciones del menú -->
                                    <div class="py-4 space-y-2" id="userMenuOptions">
                                        <!-- Las opciones se cargan dinámicamente según el tipo de usuario -->
                                    </div>

                                    <!-- Cerrar sesión -->
                                    <div class="pt-4 border-t border-gray-200">
                                        <button onclick="logout()" class="flex items-center space-x-3 p-3 w-full rounded-lg hover:bg-red-50 transition-colors duration-200 text-red-600">
                                            <i class="fas fa-sign-out-alt w-5"></i>
                                            <span>Cerrar Sesión</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mobile menu button -->
                <div class="lg:hidden">
                    <button type="button" class="text-restaurant-dark hover:text-restaurant-accent focus:outline-none focus:text-restaurant-accent transition-colors duration-200" id="mobile-menu-button">
                        <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" id="menu-open" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" id="menu-close" class="hidden" />
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Mobile Navigation Menu -->
            <div class="lg:hidden hidden" id="mobile-menu">
                <div class="px-2 pt-2 pb-3 space-y-1 bg-white shadow-lg rounded-lg mt-2">
                    <a href="#inicio" class="block px-3 py-2 text-restaurant-dark hover:text-restaurant-accent hover:bg-gray-50 rounded-md font-medium transition-colors duration-200">
                        <i class="fas fa-home w-6"></i> Inicio
                    </a>
                    <a href="#nosotros" class="block px-3 py-2 text-restaurant-dark hover:text-restaurant-accent hover:bg-gray-50 rounded-md font-medium transition-colors duration-200">
                        <i class="fas fa-users w-6"></i> Nosotros
                    </a>
                    <a href="#menu" class="block px-3 py-2 text-restaurant-dark hover:text-restaurant-accent hover:bg-gray-50 rounded-md font-medium transition-colors duration-200">
                        <i class="fas fa-utensils w-6"></i> Menú
                    </a>
                    <div class="pt-2 space-y-2">
                        <!-- Botón Reservar -->
                        <a href="#reservas" class="block w-full text-center bg-restaurant-accent hover:bg-restaurant-secondary text-white px-6 py-3 rounded-full font-medium transition-all duration-200 transform hover:scale-105 shadow-lg">
                            <i class="fas fa-phone mr-2"></i>
                            Reservar Ya
                        </a>

                        <!-- Login Mobile -->
                        <div id="mobileLoginContainer">
                            <!-- Botón cuando NO está logueado (móvil) -->
                            <button id="mobileLoginBtn" onclick="toggleMobileLoginMenu()" class="block w-full text-center bg-restaurant-dark hover:bg-restaurant-accent text-white px-6 py-3 rounded-full font-medium transition-all duration-200 transform hover:scale-105 shadow-lg">
                                <i class="fas fa-user mr-2"></i>
                                Iniciar Sesión
                            </button>

                            <!-- Botón cuando SÍ está logueado (móvil) -->
                            <button id="mobileLoggedInBtn" onclick="toggleMobileUserMenu()" class="w-full text-center bg-restaurant-accent hover:bg-restaurant-secondary text-white px-6 py-3 rounded-full font-medium transition-all duration-200 transform hover:scale-105 shadow-lg hidden">
                                <i class="fas fa-user-check mr-2"></i>
                                <span id="mobileUserName">Juan Pérez</span>
                            </button>
                        </div>

                        <!-- Menú de login móvil -->
                        <div id="mobileLoginMenu" class="hidden bg-gray-50 rounded-lg p-4 space-y-3">
                            <div class="text-center mb-4">
                                <h4 class="font-semibold text-restaurant-primary">Selecciona tu acceso</h4>
                            </div>

                            <button onclick="showLoginForm('cliente')" class="w-full bg-restaurant-accent hover:bg-yellow-500 text-white p-3 rounded-lg transition-all duration-200 flex items-center">
                                <i class="fas fa-user mr-3"></i>
                                <div class="text-left">
                                    <div class="font-semibold">Cliente</div>
                                    <div class="text-xs opacity-90">Gestiona reservas</div>
                                </div>
                            </button>

                            <button onclick="showLoginForm('empleado')" class="w-full bg-restaurant-secondary hover:bg-amber-700 text-white p-3 rounded-lg transition-all duration-200 flex items-center">
                                <i class="fas fa-id-badge mr-3"></i>
                                <div class="text-left">
                                    <div class="font-semibold">Empleado</div>
                                    <div class="text-xs opacity-90">Panel trabajo</div>
                                </div>
                            </button>

                            <button onclick="showLoginForm('admin')" class="w-full bg-restaurant-dark hover:bg-gray-800 text-white p-3 rounded-lg transition-all duration-200 flex items-center">
                                <i class="fas fa-crown mr-3"></i>
                                <div class="text-left">
                                    <div class="font-semibold">Administrador</div>
                                    <div class="text-xs opacity-90">Gestión completa</div>
                                </div>
                            </button>

                            <div class="pt-2 border-t border-gray-200 text-center">
                                <button onclick="showRegisterForm()" class="text-restaurant-accent text-sm font-medium">
                                    Crear cuenta cliente
                                </button>
                            </div>
                        </div>

                        <!-- Menú usuario logueado móvil -->
                        <div id="mobileUserMenu" class="hidden bg-gray-50 rounded-lg p-4 space-y-2">
                            <div class="flex items-center space-x-3 pb-3 border-b border-gray-200">
                                <div class="w-10 h-10 bg-restaurant-accent rounded-full flex items-center justify-center">
                                    <i class="fas fa-user text-white text-sm"></i>
                                </div>
                                <div>
                                    <div class="font-semibold text-restaurant-primary text-sm" id="mobileUserNameDisplay">Juan Pérez</div>
                                    <div class="text-xs text-gray-600" id="mobileUserType">Cliente</div>
                                </div>
                            </div>

                            <div id="mobileUserMenuOptions" class="space-y-1">
                                <!-- Opciones dinámicas según tipo de usuario -->
                            </div>

                            <button onclick="logout()" class="w-full flex items-center justify-center space-x-2 p-3 bg-red-500 hover:bg-red-600 text-white rounded-lg transition-colors duration-200">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>Cerrar Sesión</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    


    <!-- Hero Section -->
    <section id="inicio" class="relative min-h-screen flex items-center justify-center overflow-hidden">
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 z-0">
            <div class="absolute inset-0 bg-gradient-to-r from-restaurant-dark/80 via-restaurant-dark/60 to-transparent z-10"></div>
            <img src="~/images/fondo-hero.png"
                 alt="Restaurante elegante"
                 class="w-full h-full object-cover">
        </div>

        <!-- Hero Content -->
        <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center lg:text-left">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <!-- Text Content -->
                <div class="space-y-8">
                    <div class="space-y-4">
                        <h2 class="text-restaurant-accent font-medium text-lg lg:text-xl tracking-wide animate-fade-in-up">
                            Bienvenidos a Delizioso
                        </h2>
                        <h1 class="text-4xl sm:text-5xl lg:text-7xl font-elegant font-bold text-white leading-tight animate-fade-in-up animation-delay-200">
                            Sabores que
                            <span class="text-restaurant-accent">Enamoran</span>
                        </h1>
                        <p class="text-xl lg:text-2xl text-gray-200 max-w-2xl animate-fade-in-up animation-delay-400">
                            Una experiencia culinaria única donde cada plato cuenta una historia de pasión, tradición e innovación.
                        </p>
                    </div>

                    <!-- Hero Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-in-up animation-delay-600">
                        <a href="#menu" class="bg-restaurant-accent hover:bg-restaurant-secondary text-white px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 transform hover:scale-105 hover:shadow-xl group">
                            <i class="fas fa-utensils mr-2 group-hover:animate-bounce"></i>
                            Ver Nuestro Menú
                        </a>
                        <a href="#reservas" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-restaurant-dark px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 transform hover:scale-105">
                            <i class="fas fa-calendar mr-2"></i>
                            Hacer Reserva
                        </a>
                    </div>

                    <!-- Stats -->
                    <div class="grid grid-cols-3 gap-6 pt-8 animate-fade-in-up animation-delay-800">
                        <div class="text-center">
                            <div class="text-3xl lg:text-4xl font-bold text-restaurant-accent">15+</div>
                            <div class="text-white/80 text-sm lg:text-base">Años de Experiencia</div>
                        </div>
                        <div class="text-center">
                            <div class="text-3xl lg:text-4xl font-bold text-restaurant-accent">50+</div>
                            <div class="text-white/80 text-sm lg:text-base">Platos Únicos</div>
                        </div>
                        <div class="text-center">
                            <div class="text-3xl lg:text-4xl font-bold text-restaurant-accent">1000+</div>
                            <div class="text-white/80 text-sm lg:text-base">Clientes Felices</div>
                        </div>
                    </div>
                </div>

                <!-- Hero Image/Card -->
                <div class="hidden lg:flex justify-center items-center animate-fade-in-left animation-delay-400">
                    <div class="relative">
                        <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-8 border border-white/20 shadow-2xl transform rotate-3 hover:rotate-0 transition-transform duration-300">
                            <img src="~/images/Plato-Gourmet.png"
                                 alt="Plato especial"
                                 class="rounded-xl w-80 h-80 object-cover shadow-lg">
                            <div class="absolute -bottom-4 -right-4 bg-restaurant-accent text-white px-6 py-3 rounded-full font-bold shadow-lg">
                                Plato del Chef
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scroll Down Indicator -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20">
            <div class="text-white text-center animate-bounce">
                <div class="text-sm mb-2">Descubre más</div>
                <i class="fas fa-chevron-down text-restaurant-accent text-xl"></i>
            </div>
        </div>
    </section>

    <!-- Sección Nosotros -->
    <section id="nosotros" class="py-20 lg:py-32 bg-gradient-to-b from-gray-50 to-white overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Header Section -->
            <div class="text-center mb-16">
                <h3 class="text-restaurant-accent font-medium text-lg lg:text-xl tracking-wide mb-4">
                    Nuestra Historia
                </h3>
                <h2 class="text-4xl lg:text-6xl font-elegant font-bold text-restaurant-dark mb-6">
                    Pasión por la
                    <span class="text-restaurant-accent">Gastronomía</span>
                </h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                    Desde 2008, hemos dedicado nuestras vidas a crear experiencias culinarias inolvidables,
                    combinando recetas tradicionales con toques de innovación moderna.
                </p>
            </div>

            <div class="grid lg:grid-cols-2 gap-16 items-center mb-20">
                <!-- Story Content -->
                <div class="space-y-8">
                    <div class="space-y-6">
                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-restaurant-accent rounded-full flex items-center justify-center">
                                <i class="fas fa-heart text-white text-lg"></i>
                            </div>
                            <div>
                                <h4 class="text-xl font-semibold text-restaurant-dark mb-2">Tradición Familiar</h4>
                                <p class="text-gray-600 leading-relaxed">
                                    Nuestras recetas han pasado de generación en generación, preservando los sabores
                                    auténticos que nos conectan con nuestras raíces.
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-restaurant-accent rounded-full flex items-center justify-center">
                                <i class="fas fa-leaf text-white text-lg"></i>
                            </div>
                            <div>
                                <h4 class="text-xl font-semibold text-restaurant-dark mb-2">Ingredientes Frescos</h4>
                                <p class="text-gray-600 leading-relaxed">
                                    Trabajamos directamente con productores locales para garantizar la frescura y calidad
                                    en cada uno de nuestros platos.
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-restaurant-accent rounded-full flex items-center justify-center">
                                <i class="fas fa-users text-white text-lg"></i>
                            </div>
                            <div>
                                <h4 class="text-xl font-semibold text-restaurant-dark mb-2">Equipo Apasionado</h4>
                                <p class="text-gray-600 leading-relaxed">
                                    Nuestro equipo de chefs y personal de servicio comparte la misma pasión por brindar
                                    una experiencia gastronómica excepcional.
                                </p>
                            </div>
                        </div>
                    </div>
                    
                </div>

                <!-- Images Grid -->
                <div class="relative">
                    <div class="grid grid-cols-2 gap-4">
                        <div class="space-y-4">
                            <img src="https://images.unsplash.com/photo-1556909114-f6e7ad7d3136?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                                 alt="Chef preparando comida"
                                 class="rounded-2xl shadow-lg transform hover:scale-105 transition-transform duration-300">
                            <img src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                                 alt="Interior del restaurante"
                                 class="rounded-2xl shadow-lg transform hover:scale-105 transition-transform duration-300">
                        </div>
                        <div class="mt-8 space-y-4">
                            <img src="https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                                 alt="Ingredientes frescos"
                                 class="rounded-2xl shadow-lg transform hover:scale-105 transition-transform duration-300">
                            <img src="https://images.unsplash.com/photo-1544148103-0773bf10d330?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                                 alt="Equipo del restaurante"
                                 class="rounded-2xl shadow-lg transform hover:scale-105 transition-transform duration-300">
                        </div>
                    </div>

                    <!-- Floating decoration -->
                    <div class="absolute -top-4 -left-4 w-20 h-20 bg-restaurant-accent/10 rounded-full"></div>
                    <div class="absolute -bottom-4 -right-4 w-32 h-32 bg-restaurant-secondary/10 rounded-full"></div>
                </div>
            </div>

            <!-- Chef Section -->
            <div class="bg-white rounded-3xl shadow-xl p-8 lg:p-12 relative overflow-hidden">
                <div class="absolute top-0 right-0 w-40 h-40 bg-restaurant-accent/5 rounded-full -mr-20 -mt-20"></div>

                <div class="grid lg:grid-cols-3 gap-8 items-center relative z-10">
                    <!-- Chef Photo -->
                    <div class="lg:col-span-1 text-center">
                        <div class="relative inline-block">
                            <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                                 alt="Chef Principal"
                                 class="w-48 h-48 lg:w-64 lg:h-64 rounded-full object-cover shadow-xl mx-auto border-4 border-white">
                            <div class="absolute -bottom-2 -right-2 bg-restaurant-accent text-white w-16 h-16 rounded-full flex items-center justify-center shadow-lg">
                                <i class="fas fa-star text-lg"></i>
                            </div>
