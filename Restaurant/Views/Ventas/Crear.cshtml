@model Restaurant.ViewModels.VentaCreateVm
@{
    ViewData["Title"] = "Registrar Venta";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid py-4">
    <div class="dashboard-header mb-4">
        <h1><i class="fas fa-plus-circle text-success me-2"></i>Nueva Venta</h1>
        <p class="mb-0">Seleccione un pedido pendiente para registrar la venta</p>
    </div>

    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Información de la Venta</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Ventas" asp-action="Crear" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="PedidoId" class="form-label fw-bold">Pedido Pendiente</label>
                    <select asp-for="PedidoId" class="form-select">
                        <option value="">-- Seleccione un pedido --</option>
                        @foreach (var p in (List<Restaurant.Models.Rest_Pedido>)ViewBag.Pedidos)
                        {
                            <option value="@p.Id">Pedido #@p.Id - Cliente: @p.Cliente?.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="PedidoId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descuento" class="form-label fw-bold">Descuento</label>
                    <input asp-for="Descuento" type="number" step="0.01" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="Descuento" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Impuesto" class="form-label fw-bold">Impuesto (ej: 0.18 = 18%)</label>
                    <input asp-for="Impuesto" type="number" step="0.01" class="form-control" placeholder="0.18" />
                    <span asp-validation-for="Impuesto" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Ventas" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Guardar Venta
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
