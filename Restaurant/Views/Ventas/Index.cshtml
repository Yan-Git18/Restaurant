@model List<Restaurant.Models.Rest_Venta>
@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Dashboard.css" />
</head>
<body>
    <div class="container-fluid py-4">
        <div class="dashboard-header mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-file-invoice-dollar me-2"></i>Gestión de Ventas</h1>
                    <p class="mb-0">Listado y administración de ventas realizadas</p>
                </div>
                <div>
                    <span class="badge bg-light text-dark">
                        <i class="bi bi-calendar me-2"></i>
                        <span id="current-date"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="card card-rutas">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="section-title mb-0">
                        Listado de Ventas
                        <span class="badge bg-primary ms-2">@Model.Count</span>
                    </h4>
                    <a asp-controller="Ventas" asp-action="Crear" class="btn btn-success">
                        <i class="fas fa-plus"></i> Nueva Venta
                    </a>
                </div>

                <div class="table-responsive">
                    <table id="tablaVentas" class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Cliente</th>
                                <th>Fecha</th>
                                <th>Total</th>
                                <th>Descuento</th>
                                <th>Impuesto</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td><strong>@item.Id</strong></td>
                                        <td>@item.Pedido?.Cliente?.Nombre</td>
                                        <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td><span class="badge bg-success">S/ @item.Total</span></td>
                                        <td>@item.Descuento</td>
                                        <td>@(item.Impuesto * 100)%</td>
                                        <td>
                                            @if (item.Estado == "Pagada")
                                            {
                                                <span class="badge bg-success">Pagada</span>
                                            }
                                            else if (item.Estado == "Anulada")
                                            {
                                                <span class="badge bg-danger">Anulada</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">@item.Estado</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-controller="Ventas" asp-action="Editar" asp-route-id="@item.Id"
                                                   class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-danger btn-sm btn-eliminar"
                                                        data-id="@item.Id" data-nombre="Venta #@item.Id">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-4">
                                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">No hay ventas registradas</p>
                                        <a asp-controller="Ventas" asp-action="Crear" class="btn btn-success">
                                            <i class="fas fa-plus"></i> Registrar primera venta
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="text-start mt-3">
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver al Dashboard
                    </a>
                </div>
            </div>
        </div>

        <!-- Formulario oculto para eliminar -->
        <form id="form-eliminar" method="post" asp-controller="Ventas" asp-action="EliminarConfirmar" style="display:none;">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" id="input-id" />
        </form>
    </div>
</body>
</html>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.btn-eliminar').forEach(button => {
                button.addEventListener('click', function () {
                    const id = this.dataset.id;
                    const nombre = this.dataset.nombre;

                    Swal.fire({
                        title: '¿Anular venta?',
                        html: `Se anulará la <strong>${nombre}</strong> y se restaurará el stock.`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: '<i class="fas fa-trash me-1"></i> Sí, anular',
                        cancelButtonText: '<i class="fas fa-times me-1"></i> Cancelar'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            document.getElementById('input-id').value = id;
                            document.getElementById('form-eliminar').submit();
                        }
                    });
                });
            });

            document.getElementById('current-date').textContent = new Date().toLocaleDateString('es-ES', {
                weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'
            });
        });
    </script>
}
