@model Restaurant.Models.Rest_Venta
@{
    ViewData["Title"] = "Editar Venta";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid py-4">
    <div class="dashboard-header mb-4">
        <h1><i class="fas fa-edit text-warning me-2"></i>Editar Venta</h1>
        <p class="mb-0">Modifique los datos de la venta seleccionada</p>
    </div>

    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0"><i class="fas fa-pen-to-square me-2"></i>Información de la Venta</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Ventas" asp-action="Editar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Pedido Asociado</label>
                    <input type="text" class="form-control" value="Pedido #@Model.PedidoId - Cliente: @Model.Pedido?.Cliente?.Nombre" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Fecha" class="form-label fw-bold">Fecha</label>
                    <input asp-for="Fecha" type="datetime-local" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descuento" class="form-label fw-bold">Descuento</label>
                    <input asp-for="Descuento" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Descuento" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Impuesto" class="form-label fw-bold">Impuesto</label>
                    <input asp-for="Impuesto" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Impuesto" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Estado" class="form-label fw-bold">Estado</label>
                    <select asp-for="Estado" class="form-select">
                        <option value="Pagada" selected="@(Model.Estado == "Pagada")">Pagada</option>
                        <option value="Pendiente" selected="@(Model.Estado == "Pendiente")">Pendiente</option>
                        <option value="Anulada" selected="@(Model.Estado == "Anulada")">Anulada</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Ventas" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="fas fa-save me-1"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
