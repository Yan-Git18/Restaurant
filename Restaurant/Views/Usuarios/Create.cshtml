@model Restaurant.ViewModels.UsuarioViewModel
@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="roles-header d-flex justify-content-between align-items-center">
        <h2><i class="fa fa-user-plus me-2"></i>Crear Usuario</h2>
        <a asp-action="Index" class="btn btn-nuevo">
            <i class="fa fa-arrow-left me-2"></i>Volver
        </a>
    </div>

    <div class="table-card p-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control rounded-3" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control rounded-3" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RolId" class="form-label">Rol</label>
                <select asp-for="RolId" class="form-select rounded-3" asp-items="ViewBag.RolId"></select>
                <span asp-validation-for="RolId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control rounded-3" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Apellidos" class="form-label"></label>
                <input asp-for="Apellidos" class="form-control rounded-3" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label"></label>
                <input asp-for="Telefono" class="form-control rounded-3" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <button type="submit" class="action-btn btn-edit">
                <i class="fa fa-save me-1"></i>Guardar
            </button>
            <a asp-action="Index" class="action-btn btn-delete">
                <i class="fa fa-times me-1"></i>Cancelar
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}