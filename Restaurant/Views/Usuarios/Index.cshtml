@model IEnumerable<Restaurant.Models.Rest_Usuario>
@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-header d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="fa fa-users me-2"></i>Gestión de Usuarios</h2>
    <span class="fecha-hoy"></span>
</div>

<div class="card card-usuarios shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="fa fa-list me-2"></i>Lista de Usuarios</h4>
        <a asp-action="Create" class="btn btn-success d-flex align-items-center">
            <i class="fa fa-plus me-2"></i>Nuevo Usuario
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="usuariosTable">
                <thead class="table-light">
                    <tr>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Fecha Creación</th>
                        <th>Último Acceso</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td><span class="fw-semibold">@u.Correo</span></td>
                            <td><span class="badge bg-secondary">@u.Rol?.Nombre</span></td>
                            <td>
                                @if (u.Activo)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </td>
                            <td>@u.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td>@(u.UltimoAcceso?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@u.UsuarioId" class="btn btn-sm btn-warning me-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-danger"
                                        onclick="confirmarEliminacionUsuario(@u.UsuarioId)">
                                    <i class="fas fa-trash"></i>
                                </button>

                                <!-- Form oculto -->
                                <form id="form-eliminar-usuario-@u.UsuarioId"
                                      asp-action="Delete"
                                      asp-route-id="@u.UsuarioId"
                                      method="post"
                                      style="display:none;">
                                    @Html.AntiForgeryToken()
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fa fa-info-circle me-2"></i>No hay usuarios registrados.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        // DataTable
        $(document).ready(function () {
            $('#usuariosTable').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                }
            });
        });

        // SweetAlert2 para confirmación de eliminación
        function confirmarEliminacionUsuario(id) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "Este usuario será eliminado permanentemente",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#e74c3c',
                cancelButtonColor: '#95a5a6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar',
                customClass: {
                    popup: 'rounded-3 shadow',
                    confirmButton: 'rounded-pill px-4',
                    cancelButton: 'rounded-pill px-4'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("form-eliminar-usuario-" + id).submit();
                }
            });
        }

        // Fecha actual dinámica
        document.addEventListener("DOMContentLoaded", function () {
            const fecha = new Date();
            const opciones = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            document.querySelector(".fecha-hoy").innerText = fecha.toLocaleDateString('es-ES', opciones);
        });
    </script>
}
