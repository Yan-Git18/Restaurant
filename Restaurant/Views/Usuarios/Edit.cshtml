@model Restaurant.ViewModels.UsuarioViewModel
@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Encabezado -->
    <div class="dashboard-header mb-4">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div>
                <h1 class="mb-1"><i class="fa fa-user-edit me-2"></i>Editar Usuario</h1>
                <p class="text-muted mb-0">Actualiza la información del usuario seleccionado</p>
            </div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa fa-arrow-left me-1"></i> Volver al listado
            </a>
        </div>
    </div>

    <!-- Tarjeta principal -->
    <div class="card shadow border-0 card-usuarios">
        <div class="card-body p-4">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="UsuarioId" />

                <div class="row g-3">
                    <!-- Correo -->
                    <div class="col-md-6">
                        <label asp-for="Correo" class="form-label fw-semibold"></label>
                        <input asp-for="Correo" class="form-control rounded-3" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <!-- Rol -->
                    <div class="col-md-6">
                        <label asp-for="RolId" class="form-label fw-semibold">Rol</label>
                        <select asp-for="RolId" class="form-select rounded-3" asp-items="ViewBag.RolId"></select>
                        <span asp-validation-for="RolId" class="text-danger"></span>
                    </div>

                    <!-- Estado -->
                    <div class="col-md-6">
                        <label asp-for="Activo" class="form-label fw-semibold">Estado</label>
                        <select asp-for="Activo" class="form-select rounded-3">
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                    </div>

                    <!-- Password -->
                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label fw-semibold">Nueva Contraseña (opcional)</label>
                        <input asp-for="Password" type="password" class="form-control rounded-3" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Nombre -->
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label fw-semibold"></label>
                        <input asp-for="Nombre" class="form-control rounded-3" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <!-- Apellidos -->
                    <div class="col-md-6">
                        <label asp-for="Apellidos" class="form-label fw-semibold"></label>
                        <input asp-for="Apellidos" class="form-control rounded-3" />
                        <span asp-validation-for="Apellidos" class="text-danger"></span>
                    </div>

                    <!-- Teléfono -->
                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label fw-semibold"></label>
                        <input asp-for="Telefono" class="form-control rounded-3" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botones -->
                <div class="mt-4 d-flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-sync-alt me-1"></i> Actualizar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa fa-times me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
