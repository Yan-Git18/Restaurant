@model IEnumerable<Restaurant.Models.Rest_Persona>
@{
    ViewData["Title"] = "Empleados";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Dashboard.css" />
</head>
<body>
    <div class="container-fluid py-4">

        <!-- Header -->
        <div class="dashboard-header">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1>Gestión de Empleados</h1>
                    <p class="mb-0">Listado de empleados registrados en el sistema</p>
                </div>
                <div>
                    <span class="badge bg-light text-dark">
                        <i class="bi bi-calendar me-2"></i>
                        <span id="current-date"></span>
                    </span>
                </div>
            </div>
        </div>

        <!-- Card Empleados -->
        <div class="card card-empleados">
            <div class="card-body">
                <h4 class="section-title mb-3">
                    Lista de Empleados
                    <span class="badge bg-primary ms-2">@Model?.Count()</span>
                </h4>

                <div class="table-responsive">
                    <table id="tablaEmpleados" class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Apellidos</th>
                                <th>Correo</th>
                                <th>Teléfono</th>
                                <th>Fecha Registro</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var empleado in Model)
                                {
                                    <tr>
                                        <td><span class="badge bg-secondary">#@empleado.PersonaId</span></td>
                                        <td><strong>@empleado.Nombre</strong></td>
                                        <td>@empleado.Apellidos</td>
                                        <td>@empleado.Correo</td>
                                        <td>@empleado.Telefono</td>
                                        <td><small>@empleado.FechaRegistro.ToString("dd/MM/yyyy")</small></td>
                                        <td>
                                            @if (empleado.Usuario?.Activo ?? true)  
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle me-1"></i>Activo
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times-circle me-1"></i>Inactivo
                                                </span>
                                            }
                                        </td>

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-4">
                                        <i class="fas fa-user-tie fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">No hay empleados registrados</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="text-start mt-3">
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver al Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Fecha actual
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            document.getElementById('current-date').textContent = new Date().toLocaleDateString('es-ES', options);

            // Auto-ocultar alertas
            setTimeout(function () {
                document.querySelectorAll('.alert').forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });

        // Inicializar DataTables
        $(document).ready(function () {
            $('#tablaEmpleados').DataTable({
                language: { url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json' },
                order: [[0, 'desc']],
                pageLength: 10,
                responsive: true
            });
        });
    </script>
}
