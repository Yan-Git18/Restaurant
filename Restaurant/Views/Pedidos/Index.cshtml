@model Restaurant.Models.Rest_Venta;
@{
    ViewData["Title"] = "Registrar Pedido";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var productos = ViewBag.Productos as List<Restaurant.Models.Rest_Producto>;
}
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <h2>Registrar Pedido</h2>
    <form asp-action="Crear" method="post">
        <div class="form-group">
            <label>Lista de Productos</label>
            <div>
                @foreach (var producto in productos)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="ProductosSeleccionados" value="@producto.Id" id="prod_@producto.Id" />
                        <label class="form-check-label" for="prod_@producto.Id">
                            @producto.Nombre - @producto.Precio.ToString("C")
                        </label>
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Registrar Venta</button>
    </form>
</body>
</html>