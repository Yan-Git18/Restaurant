@model Restaurant.Models.Rest_Producto
@{
    ViewData["Title"] = "Crear Producto";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Dashboard.css" />
</head>
<body>
    <div class="container-fluid py-4">
        <div class="dashboard-header mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-plus-circle text-success me-2"></i>Registrar Nuevo Producto</h1>
                    <p class="mb-0">Complete los datos del nuevo producto del restaurante</p>
                </div>
                <div>
                    <span class="badge bg-light text-dark">
                        <i class="bi bi-calendar me-2"></i>
                        <span id="current-date"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card card-facturas shadow">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-utensils me-2"></i>Información del Producto</h5>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Productos" asp-action="Crear" method="post">
                            @Html.AntiForgeryToken()

                            <div class="row">
                                <!-- COLUMNA IZQUIERDA: FORMULARIO -->
                                <div class="col-lg-7 col-md-6">
                                    <!-- Nombre del Producto -->
                                    <div class="mb-3">
                                        <label asp-for="Nombre" class="form-label fw-bold">
                                            <i class="fas fa-tag me-1"></i>Nombre del Producto
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Pizza Margherita" />
                                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                                    </div>

                                    <!-- Descripción -->
                                    <div class="mb-3">
                                        <label asp-for="Descripcion" class="form-label fw-bold">
                                            <i class="fas fa-align-left me-1"></i>Descripción
                                        </label>
                                        <textarea asp-for="Descripcion" class="form-control" rows="3"
                                                  placeholder="Descripción detallada del producto..."></textarea>
                                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                        <small class="text-muted">Máximo 500 caracteres</small>
                                    </div>

                                    <!-- Precio -->
                                    <div class="mb-3">
                                        <label asp-for="Precio" class="form-label fw-bold">
                                            <i class="fas fa-dollar-sign me-1"></i>Precio
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text">S/</span>
                                            <input asp-for="Precio" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                        </div>
                                        <span asp-validation-for="Precio" class="text-danger small"></span>
                                    </div>

                                    <!-- Categoría -->
                                    <div class="form-group mb-3">
                                        <label asp-for="CategoriaId" class="control-label"></label>
                                        <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias">
                                            <option value="">-- Seleccione una categoría --</option>
                                        </select>
                                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                                    </div>


                                    <div class="form-group mb-3">
                                        <label asp-for="InventarioId" class="control-label"></label>
                                        <select asp-for="InventarioId" class="form-select" asp-items="ViewBag.Inventarios">
                                            <option value="">-- Seleccione un inventario --</option>
                                        </select>
                                        <span asp-validation-for="InventarioId" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Stock" class="form-label fw-bold">
                                            <i class="fas fa-boxes me-1"></i> Stock
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="Stock" type="number" min="0" class="form-control" placeholder="0" />
                                        <span asp-validation-for="Stock" class="text-danger small"></span>
                                    </div>

                                    <!-- URL de Imagen -->
                                    <div class="mb-3">
                                        <label asp-for="ImagenUrl" class="form-label fw-bold">
                                            <i class="fas fa-image me-1"></i>URL de la Imagen
                                        </label>
                                        <input asp-for="ImagenUrl" type="url" class="form-control"
                                               placeholder="https://ejemplo.com/imagen.jpg" id="imagenUrl" />
                                        <span asp-validation-for="ImagenUrl" class="text-danger small"></span>
                                        <small class="text-muted d-block mt-1">
                                            <i class="fas fa-info-circle me-1"></i>Opcional. Ingrese la URL completa de la imagen.
                                        </small>
                                    </div>

                                    <!-- Disponibilidad -->
                                    <div class="mb-3">
                                        <div class="form-check form-switch">
                                            <input asp-for="Disponible" class="form-check-input" type="checkbox" checked />
                                            <label asp-for="Disponible" class="form-check-label fw-bold">
                                                <i class="fas fa-check-circle text-success me-1"></i>Producto Disponible
                                            </label>
                                        </div>
                                        <small class="text-muted ms-4">Marque si el producto estará disponible inmediatamente</small>
                                    </div>
                                </div>

                                <!-- COLUMNA DERECHA: VISTA PREVIA -->
                                <div class="col-lg-5 col-md-6">
                                    <div class="card bg-light h-100">
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title text-center mb-3">
                                                <i class="fas fa-eye me-2"></i>Vista Previa
                                            </h5>

                                            <div id="preview-container" class="flex-grow-1 d-flex align-items-center justify-content-center">
                                                <!-- Placeholder cuando no hay imagen -->
                                                <div id="preview-placeholder" class="text-center">
                                                    <i class="fas fa-image fa-5x text-muted mb-3"></i>
                                                    <p class="text-muted">Ingrese una URL para ver la vista previa</p>
                                                </div>

                                                <!-- Vista previa de la imagen -->
                                                <div id="preview-image-container" style="display: none;" class="text-center w-100">
                                                    <img id="imagen-preview" src="" alt="Vista previa"
                                                         class="img-fluid rounded shadow" style="max-height: 400px; object-fit: contain;">
                                                    <div class="mt-3">
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check-circle me-1"></i>Imagen válida
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4">

                            <!-- Botones de acción -->
                            <div class="d-flex justify-content-between">
                                <div class="text-start mt-3">
                                    <a asp-controller="Productos" asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i> Cancelar
                                    </a>
                                </div>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save me-1"></i> Guardar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script>
        // Mostrar fecha actual
        document.getElementById('current-date').textContent = new Date().toLocaleDateString('es-ES', {
            weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'
        });

        // Vista previa de imagen
        const imagenUrlInput = document.getElementById('imagenUrl');
        const previewPlaceholder = document.getElementById('preview-placeholder');
        const previewImageContainer = document.getElementById('preview-image-container');
        const imagenPreview = document.getElementById('imagen-preview');

        if (imagenUrlInput) {
            imagenUrlInput.addEventListener('input', function() {
                const url = this.value.trim();

                if (url && (url.startsWith('http://') || url.startsWith('https://'))) {
                    imagenPreview.src = url;

                    // Mostrar imagen cuando cargue correctamente
                    imagenPreview.onload = function() {
                        previewPlaceholder.style.display = 'none';
                        previewImageContainer.style.display = 'block';
                    };

                    // Manejar error de carga
                    imagenPreview.onerror = function() {
                        previewPlaceholder.style.display = 'block';
                        previewImageContainer.style.display = 'none';

                        Swal.fire({
                            icon: 'warning',
                            title: 'Imagen no disponible',
                            text: 'No se pudo cargar la imagen desde la URL proporcionada',
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000
                        });
                    };
                } else {
                    previewPlaceholder.style.display = 'block';
                    previewImageContainer.style.display = 'none';
                }
            });
        }

        // Validación del formulario antes de enviar
        document.querySelector('form').addEventListener('submit', function(e) {
            const precio = parseFloat(document.querySelector('[name="Precio"]').value);

            if (precio <= 0) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Error de validación',
                    text: 'El precio debe ser mayor a 0',
                    confirmButtonColor: '#d33'
                });
                return false;
            }
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}