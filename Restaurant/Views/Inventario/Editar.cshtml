@model Restaurant.Models.Rest_Inventario
@{
    ViewData["Title"] = "Editar Inventario";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Dashboard.css" />
</head>
<body>
    <div class="container-fluid py-4">
        <div class="dashboard-header mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1>Editar inventario</h1>
                </div>
                <div>
                    <span class="badge bg-light text-dark">
                        <i class="bi bi-calendar me-2"></i>
                        <span id="current-date"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-lg-4">
                <div class="card card-vehiculos">
                    <div class="card-body">
                        <form asp-controller="Inventario" asp-action="Editar" method="post">
                            @Html.AntiForgeryToken()
                            <input asp-for="Id" type="hidden" />

                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre</label>
                                <input asp-for="Nombre" class="form-control" required />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Descripcion" class="form-label">Descripción</label>
                                <input asp-for="Descripcion" class="form-control" />
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="UnidadMedida" class="form-label">Unidad de Medida</label>
                                <input asp-for="UnidadMedida" class="form-control" required />
                                <span asp-validation-for="UnidadMedida" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="StockMinimo" class="form-label">Stock mínimo</label>
                                <input asp-for="StockMinimo" type="number" min="0" class="form-control" />
                                <span asp-validation-for="StockMinimo" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Última actualización</label>
                                <input value="@Model.FechaActualizacion.ToString("dd/MM/yyyy HH:mm")"
                                       class="form-control" readonly />
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save me-1"></i> Guardar
                                </button>
                                <a asp-controller="Inventario" asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Volver
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script>
        document.getElementById('current-date').textContent = new Date().toLocaleDateString('es-ES', {
            weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
