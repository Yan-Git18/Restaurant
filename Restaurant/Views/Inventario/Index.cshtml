@model List<Restaurant.Models.Rest_Inventario>
@{
    ViewData["Title"] = "Inventario";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Dashboard.css" />
</head>
<body>
    <div class="container-fluid py-4">
        <div class="dashboard-header">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1>Gestión de Inventario</h1>
                    <p class="mb-0">Listado y administración de insumos disponibles</p>
                </div>
                <div>
                    <span class="badge bg-light text-dark">
                        <i class="bi bi-calendar me-2"></i>
                        <span id="current-date"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="card card-rutas">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="section-title mb-0">
                        Listado de Inventario
                        <span class="badge bg-primary ms-2">@Model.Count</span>
                    </h4>
                    <a asp-controller="Inventario" asp-action="Crear" class="btn btn-success">
                        <i class="fas fa-plus"></i> Nuevo Insumo
                    </a>
                </div>

                <div class="table-responsive">
                    <table id="tablaInventario" class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Unidad de Medida</th>
                                <th>Stock</th>
                                <th>Stock Mínimo</th>
                                <th>Última Actualización</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><strong>@item.Id</strong></td>
                                        <td><strong>@item.Nombre</strong></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Descripcion))
                                            {
                                                @(item.Descripcion.Length > 50 ? item.Descripcion.Substring(0, 50) + "..." : item.Descripcion)
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Sin descripción</span>
                                            }
                                        </td>
                                        <td><span class="badge bg-info">@item.UnidadMedida</span></td>
                                        <td>
                                            <span class="badge @(item.Stock <= item.StockMinimo ? "bg-danger" : "bg-success")">
                                                @item.Stock
                                            </span>
                                        </td>
                                        <td>@item.StockMinimo</td>
                                        <td>
                                            <small>@item.FechaActualizacion.ToString("dd/MM/yyyy HH:mm")</small>
                                        </td>
                                        <td>
                                            <div role="group">
                                                <a asp-controller="Inventario" asp-action="Editar" asp-route-id="@item.Id"
                                                   class="btn btn-warning btn-sm" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-danger btn-sm btn-eliminar"
                                                        data-id="@item.Id" data-nombre="@item.Nombre" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-4">
                                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">No hay insumos registrados en el inventario</p>
                                        <a asp-controller="Inventario" asp-action="Crear" class="btn btn-success">
                                            <i class="fas fa-plus"></i> Crear primer insumo
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="text-start mt-3">
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver al Dashboard
                    </a>
                </div>
            </div>
        </div>

        <!-- Formulario oculto para eliminar -->
        <form id="form-eliminar" method="post" asp-controller="Inventario" asp-action="EliminarConfirmar" style="display:none;">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" id="input-id" />
        </form>
    </div>
</body>
</html>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Manejador de eliminación con SweetAlert2
            document.querySelectorAll('.btn-eliminar').forEach(button => {
                button.addEventListener('click', function () {
                    const id = this.dataset.id;
                    const nombre = this.dataset.nombre;

                    Swal.fire({
                        title: '¿Estás seguro?',
                        html: `Se eliminará el insumo: <strong>${nombre}</strong>`,
                        text: "¡No podrás revertir esta acción!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: '<i class="fas fa-trash me-1"></i> Sí, eliminar',
                        cancelButtonText: '<i class="fas fa-times me-1"></i> Cancelar',
                        focusCancel: true
                    }).then((result) => {
                        if (result.isConfirmed) {
                            document.getElementById('input-id').value = id;
                            document.getElementById('form-eliminar').submit();
                        }
                    });
                });
            });

            // Mostrar fecha actual
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const currentDateElement = document.getElementById('current-date');
            if (currentDateElement) {
                currentDateElement.textContent = new Date().toLocaleDateString('es-ES', options);
            }

            // Auto-ocultar alertas después de 5 segundos
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>

    <script>
        // Inicializar DataTables
        $(document).ready(function () {
            $('#tablaInventario').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                order: [[0, 'desc']],
                pageLength: 10,
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: [7] }
                ]
            });
        });
    </script>
}
