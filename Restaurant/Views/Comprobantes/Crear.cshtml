@model Restaurant.Models.Rest_Comprobante
@{
    ViewData["Title"] = "Nuevo Comprobante";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="card card-rutas">
        <div class="card-body">
            <h2 class="mb-4"><i class="fas fa-plus-circle me-2"></i>Registrar Comprobante</h2>

            <form asp-action="Crear" method="post">
                @Html.AntiForgeryToken()

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Tipo" class="form-label">Tipo</label>
                        <select asp-for="Tipo" class="form-select" required>
                            <option value="">Seleccione un tipo</option>
                            <option value="Boleta">Boleta</option>
                            <option value="Factura">Factura</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Numero" class="form-label">Número</label>
                        <input asp-for="Numero" class="form-control" placeholder="Ej: F001-000123" required />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Formato" class="form-label">Formato</label>
                        <select asp-for="Formato" class="form-select" required>
                            <option value="Digital">Digital</option>
                            <option value="Físico">Físico</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="VentaId" class="form-label">Venta Asociada</label>
                        <select asp-for="VentaId" class="form-select" required>
                            <option value="">Seleccione una venta</option>
                            @foreach (var venta in ViewBag.Ventas)
                            {
                                <option value="@venta.Id">#@venta.Id - @venta.Pedido.Cliente.Nombre (S/ @venta.Total.ToString("F2"))</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="EnviadoEmail" class="form-check-input" type="checkbox" />
                    <label asp-for="EnviadoEmail" class="form-check-label">¿Enviado por correo?</label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
