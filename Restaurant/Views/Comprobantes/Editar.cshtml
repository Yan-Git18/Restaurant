@model Restaurant.Models.Rest_Comprobante
@{
    ViewData["Title"] = "Editar Comprobante";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="card card-rutas">
        <div class="card-body">
            <h2 class="mb-4"><i class="fas fa-edit me-2"></i>Editar Comprobante</h2>

            <form asp-action="Editar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Tipo" class="form-label">Tipo</label>
                        <input asp-for="Tipo" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Numero" class="form-label">Número</label>
                        <input asp-for="Numero" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Formato" class="form-label">Formato</label>
                        <input asp-for="Formato" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="VentaId" class="form-label">Venta Asociada</label>
                        <select asp-for="VentaId" class="form-select">
                            @foreach (var venta in ViewBag.Ventas)
                            {
                                <option value="@venta.Id" selected="@(Model.VentaId == venta.Id)">
                                    #@venta.Id - @venta.Pedido.Cliente.Nombre (S/ @venta.Total.ToString("F2"))
                                </option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="EnviadoEmail" class="form-check-input" type="checkbox" />
                    <label asp-for="EnviadoEmail" class="form-check-label">¿Enviado por correo?</label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
