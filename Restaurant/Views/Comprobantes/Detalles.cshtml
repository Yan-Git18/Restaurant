@model Restaurant.Models.Rest_Comprobante
@{
    ViewData["Title"] = $"Comprobante #{Model.Id}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="card card-rutas">
        <div class="card-body">
            <h2 class="mb-4"><i class="fas fa-file-invoice me-2"></i>Detalles del Comprobante</h2>

            <div class="row mb-4">
                <div class="col-md-6">
                    <p><strong>Tipo:</strong> @Model.Tipo</p>
                    <p><strong>Número:</strong> @Model.Numero</p>
                    <p><strong>Formato:</strong> @Model.Formato</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Fecha Emisión:</strong> @Model.FechaEmision.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Enviado por Correo:</strong> @(Model.EnviadoEmail ? "Sí" : "No")</p>
                    <p><strong>Venta Asociada:</strong> #@Model.VentaId - @Model.Venta?.Pedido?.Cliente?.Nombre</p>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
                <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>
