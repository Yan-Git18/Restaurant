@model IEnumerable<Restaurant.Models.Rest_Rol>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container py-4">
    <div class="roles-header d-flex justify-content-between align-items-center">
        <h2><i class="fa fa-shield-alt me-2"></i>Gestión de Roles</h2>
        <a asp-action="Create" class="btn btn-nuevo">
            <i class="fa fa-plus me-2"></i>Nuevo Rol
        </a>
    </div>

    <div class="table-card">
        @if (Model != null && Model.Any())
        {
            <table class="modern-table">
                <thead>
                    <tr>
                        <th width="10%">ID</th>
                        <th width="25%">Nombre</th>
                        <th width="40%">Descripción</th>
                        <th width="25%">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rol in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge-id">#@rol.RolId</span>
                            </td>
                            <td>
                                <span class="rol-name">@rol.Nombre</span>
                            </td>
                            <td>
                                <span class="rol-description">@rol.Descripcion</span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@rol.RolId" class="action-btn btn-edit">
                                    <i class="fa fa-edit me-1"></i>Editar
                                </a>
                                <button type="button" class="action-btn btn-delete" onclick="confirmarEliminacion(@rol.RolId)">
                                    <i class="fa fa-trash me-1"></i>Eliminar
                                </button>
                                <form id="form-eliminar-@rol.RolId" method="post" asp-action="DeleteConfirmed" asp-route-id="@rol.RolId" style="display:none;"></form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="fa fa-shield-alt"></i>
                <h4>No hay roles registrados</h4>
                <p>Comienza creando tu primer rol</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmarEliminacion(id) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "¡No podrás revertir esta acción!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#f5576c',
                cancelButtonColor: '#a0aec0',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar',
                customClass: {
                    popup: 'rounded-3',
                    confirmButton: 'rounded-2',
                    cancelButton: 'rounded-2'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("form-eliminar-" + id).submit();
                }
            });
        }
    </script>
}