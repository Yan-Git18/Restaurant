@model Restaurant.Models.Rest_Rol
@{
    ViewData["Title"] = "Editar Rol";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="roles-header d-flex justify-content-between align-items-center">
        <h2><i class="fa fa-edit me-2"></i>Editar Rol</h2>
        <a asp-action="Index" class="btn btn-nuevo">
            <i class="fa fa-arrow-left me-2"></i>Volver
        </a>
    </div>

    <div class="table-card p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="RolId" />
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control rounded-3" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control rounded-3" rows="4"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <button type="submit" class="action-btn btn-edit">
                <i class="fa fa-sync-alt me-1"></i>Actualizar
            </button>
            <a asp-action="Index" class="action-btn btn-delete">
                <i class="fa fa-times me-1"></i>Cancelar
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}