@model List<Restaurant.Models.Rest_Pago>
@{
    ViewData["Title"] = "Pagos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid py-4">
    <div class="dashboard-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1><i class="fas fa-money-bill-wave me-2"></i>Gestión de Pagos</h1>
                <p class="mb-0">Listado y control de pagos registrados</p>
            </div>
            <div>
                <span class="badge bg-light text-dark">
                    <i class="bi bi-calendar me-2"></i>
                    <span id="current-date"></span>
                </span>
            </div>
        </div>
    </div>

    <div class="card card-rutas">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="section-title mb-0">
                    Listado de Pagos
                    <span class="badge bg-primary ms-2">@Model.Count</span>
                </h4>
                <a asp-controller="Pagos" asp-action="Crear" class="btn btn-success">
                    <i class="fas fa-plus"></i> Nuevo Pago
                </a>
            </div>

            <div class="table-responsive">
                <table id="tablaPagos" class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Método</th>
                            <th>Monto</th>
                            <th>Fecha</th>
                            <th>Referencia</th>
                            <th>Venta</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Metodo</td>
                                    <td><span class="badge bg-success">S/ @item.Monto</span></td>
                                    <td>@item.FechaPago.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.Referencia</td>
                                    <td>Venta #@item.VentaId</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger btn-sm btn-eliminar"
                                                    data-id="@item.Id" data-nombre="Pago #@item.Id">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No hay pagos registrados</p>
                                    <a asp-action="Crear" class="btn btn-success">
                                        <i class="fas fa-plus"></i> Registrar primer pago
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-start mt-3">
                <a asp-controller="Ventas" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a Ventas
                </a>
            </div>
        </div>
    </div>

    <form id="form-eliminar" method="post" asp-controller="Pagos" asp-action="EliminarConfirmar" style="display:none;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="input-id" />
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.btn-eliminar').forEach(button => {
                button.addEventListener('click', function () {
                    const id = this.dataset.id;
                    const nombre = this.dataset.nombre;

                    Swal.fire({
                        title: '¿Eliminar pago?',
                        html: `Se eliminará el <strong>${nombre}</strong>.`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: 'Sí, eliminar',
                        cancelButtonText: 'Cancelar'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            document.getElementById('input-id').value = id;
                            document.getElementById('form-eliminar').submit();
                        }
                    });
                });
            });

            document.getElementById('current-date').textContent =
                new Date().toLocaleDateString('es-ES', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
        });

        $(document).ready(function () {
            const tienePagos = @((Model != null && Model.Any()).ToString().ToLower());
            if (tienePagos) {
                $('#tablaPagos').DataTable({
                    language: { url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json' },
                    order: [[0, 'desc']],
                    pageLength: 10,
                    responsive: true
                });
            }
        });
    </script>
}
